<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    tools:context=".view.activities.StartUpActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:id="@+id/imgBackground"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/test_bg_login_vistory_tower" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_70sdp"
        android:id="@+id/imgLogo"
        app:srcCompat="@drawable/rajkul_transparent"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="खम्मा घणी सा"
        android:id="@+id/txtSlogan"
        android:textColor="@color/white"
        style="@style/LightSemiBoldTextStyle"
        android:fontFamily="@font/laila_semi_bold"
        android:textSize="@dimen/_20ssp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/our_nheritage"
        android:layout_marginStart="@dimen/_15sdp"
        style="@style/LightSemiBoldTextStyle"
        android:textColor="@color/colorLight"
        android:fontFamily="@font/laila_semi_bold"
        android:textSize="@dimen/_30ssp"
        android:id="@+id/txtSlideSlogan"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@+id/txtSlogan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_3sdp"
        android:background="@drawable/shape_corner_10"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/txtSlideSlogan"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_15sdp"
        android:id="@+id/viewBottom"
        android:layout_marginTop="@dimen/_10sdp"
        />



    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DefaultActionButtonStyle"
        app:layout_constraintBottom_toTopOf="@+id/btnRegister"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="Login"
        android:id="@+id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegister"
        style="@style/DefaultStrokeButtonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_20sdp"
        android:text="Create new account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>